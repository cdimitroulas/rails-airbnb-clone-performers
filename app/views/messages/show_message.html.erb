<div class="container">
  <div class="row">
    <div class="col-sm-8 col-offset-sm-2">
      <div class="container-message">
        <div class="row">
        <h1>Discussion with <%= current_user.first_name %></h1>
        <br>
          <div class="row">
          <%= link_to 'Go back to Profile', user_path(current_user) %>
          </div>
          <br>
            <div class="row">

              <div class="col-sm-3">
                <p>Date: </p>
              </div>
              <div class="col-sm-9">
                <p><%= @message.created_at %></p>
            </div>
          </div>
          <div class="row">
              <div class="col-sm-3">
                <p>Subject: </p>
              </div>
              <div class="col-sm-9">
                <p><%= @message.subject %></p>
            </div>
          </div>
          <div class="row">
              <div class="col-sm-3">
                <p>Content: </p>
              </div>
              <div class="col-sm-9">
                <p><%= @message.content %></p>
            </div>
          </div>
        <br>
            <%= render 'form', performer: @performer, message: current_user.messages_sent.build %>
      </div>
      </div>
    </div>
  </div>
</div>
