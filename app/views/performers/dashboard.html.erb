<div class="container" id="dashboard">
  <h1>Welcome to your dashboard <%= current_performer.first_name %></h1>
    <div class="row">
      <div class="profile-update text-center col-md-3">
      <br>
        <img src="<%= current_performer.profile_picture %>" class="avatar-square">
        <div class="profile-link">
          <p><%= link_to "Edit your profile", edit_performer_path(current_performer) %></p>
        </div>
      </div>

      <div class="col-md-9">
        <div class="messages">
          <div class="row">
            <div class="col-md-12">
              <div class="headtitle-profile">Your messages (<%= current_performer.messages_received.where(read: false).count %> new)</div>
                <% current_performer.messages_received.each do |message_received|%>
                <%= link_to performer_message_path(current_performer, message_received) do %>
                <div class="tables-row">
                  <div class="row">
                    <div class="col-md-1">
                        <img src="http://placehold.it/100x100" class="avatar">
                    </div>
                    <div class="col-md-2">
                      <p> <strong>Date: </strong></p>
                      <p><%= message_received.created_at %> </p>
                    </div>
                    <div class="col-md-2">
                      <p> <strong>Sender: </strong></p>
                      <p> <%= message_received.sender.first_name %> <%= message_received.sender.last_name %></p>
                    </div>
                    <div class="col-md-7">
                      <div class="row">
                        <p> <strong>Subject: </strong></p>
                        <p> <%= message_received.subject %> </p>
                      </div>
                      <div class="row">
                        <p> <%= message_received.content %> </p>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

    <br>

        <div class="bookings">
          <div class="row">
            <div class="col-md-12">
              <div class="headtitle-profile">Your next performances</div>
              <% current_performer.bookings.each do |booking|%>
                <%#= link_to performer_message_path(current_performer, message_received) do %>
                <div class="tables-row">
                  <div class="row">
                    <div class="col-md-1">
                        <img src="http://placehold.it/100x100" class="avatar">
                    </div>
                    <div class="col-md-4">
                      <p> <strong>Date and time: </strong></p>
                      <p><%= booking.start_time %> </p>
                      <p><%= booking.end_time %> </p>
                    </div>
                    <div class="col-md-3">
                      <p> <strong>Location: </strong></p>
                      <p> <%= booking.location %></p>
                    </div>
                    <div class="col-md-4">
                      <div class="row">
                        <p> <strong>Customer name: </strong></p>
                        <p> <%= User.find(booking.user_id).first_name  %> <%= User.find(booking.user_id).first_name  %></p>
                      </div>
                    </div>
                  </div>
                </div>
              <%# end %>
            <% end %>

            </div>
          </div>
        </div>

        <div class="previous-bookings"><%= link_to 'Past performances'%></div>

      </div>
  </div>
</div>


