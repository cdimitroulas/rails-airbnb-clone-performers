<div class="container">
  <h2 class="form-header">Sign up as a performer</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-inline" id="names-div">
        <%= f.input :first_name, required: true, autofocus: true, label:false, placeholder: "First name" %>
        <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Last name" %>
      </div>
      <%= f.input :phone_number, required: true, autofocus: true %>
      <%= f.input :email, required: true, autofocus: true %>
      <div class="form-group">

        <label>Address Details</label>
        <div class="form-inline" id="address-div">
          <%= f.input :city, required: true, autofocus: true, label: false, placeholder: "City" %>
          <%= f.input :postcode, required: true, autofocus: true, label: false, placeholder: "Postcode" %>
        </div>
      </div>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
